<div class="container py-5">
  <h3><%= @company.name %> | Customers</h3>
  <div class="row">
    <div class="col">
      <%= link_to '< Company', company_path(@company) %>
    </div>
  </div>
  <%= link_to "+ Create a Customer", new_company_customer_path %><br>
  <% if @customers.empty? %>
  <p>No Customers Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @customers.each do |customer| %>
        <a href="<%= company_customer_path(company_id: @company, id: customer.id) %>" class="list-group-item list-group-item-action">
          <%= customer.name %>
        </a>
      <% end %>
    </ul>
  <% end %>
</div>
